<section class="hero is-success">
 <div class="hero-body">
    <div class="container">
      <h1 class="title">
        投稿一覧
      </h1>
    </div>
  </div>
</section>

<div class="section">
  <div class="container">
    <div class="columns is-multiline">
      <% @projects.each do |project| %>
        <div class="column is-3">
          <div class="card">
            <div class="card-image">
              <figure class="image is-4by3">
                <%= link_to project_path(project) do %>
                  <%= attachment_image_tag project, :image, fallback: "no.png", alt: "no" %>
                 <% end %>
              </figure>
            </div>
            <div class="card-content">
              <div class="media">
                <div class="media-left">
                  <figure class="image is-48x48">
                    <%= attachment_image_tag project.user, :profile_image, fallback: "no.png", alt: "no", class: "profile_image" %>
                  </figure>
                </div>
                <div class="media-content">
                  <div class="title"><%=link_to project.user.name, user_path(project.user) %></div>
                </div>
              </div>

              <div class="content">
               <time><%= project.updated_at.strftime("%Y-%m-%d %H:%M") %></time>更新
              </div>
            </div>
          </div>
        </div>
      <% end %>
      </div>
  </div>
</div>

<!--トップへ戻る-->
<div class="margin-center">
 <%= link_to "このページトップへ", projects_path %>  
</div>









